<?php

namespace Tests\Feature;

use App\Models\Item;
use Illuminate\Foundation\Testing\RefreshDatabase;
use Tests\TestCase;

class ItemTest extends TestCase
{
    use RefreshDatabase;

    public function test_create_item(): void
    {
        $response = $this->postJson('/api/items', [
            'name' => 'Test Item',
            'description' => 'A test item',
        ]);

        $response->assertStatus(201)
            ->assertJsonStructure(['id', 'name', 'description', 'created_at', 'updated_at'])
            ->assertJson(['name' => 'Test Item']);
    }

    public function test_create_item_validation(): void
    {
        $response = $this->postJson('/api/items', [
            'name' => '',
        ]);

        $response->assertStatus(422);
    }

    public function test_list_items(): void
    {
        Item::factory()->count(3)->create();

        $response = $this->getJson('/api/items');

        $response->assertStatus(200)
            ->assertJsonCount(3);
    }

    public function test_show_item(): void
    {
        $item = Item::factory()->create(['name' => 'Show Item']);

        $response = $this->getJson("/api/items/{$item->id}");

        $response->assertStatus(200)
            ->assertJson(['name' => 'Show Item']);
    }

    public function test_update_item(): void
    {
        $item = Item::factory()->create();

        $response = $this->patchJson("/api/items/{$item->id}", [
            'name' => 'Updated Item',
        ]);

        $response->assertStatus(200)
            ->assertJson(['name' => 'Updated Item']);
    }

    public function test_delete_item(): void
    {
        $item = Item::factory()->create();

        $response = $this->deleteJson("/api/items/{$item->id}");

        $response->assertStatus(204);
        $this->assertDatabaseMissing('items', ['id' => $item->id]);
    }

    public function test_show_nonexistent_item(): void
    {
        $response = $this->getJson('/api/items/nonexistent-uuid');

        $response->assertStatus(404);
    }
}
