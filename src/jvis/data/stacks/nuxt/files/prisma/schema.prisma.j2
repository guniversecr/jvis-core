generator client {
  provider = "prisma-client-js"
}

datasource db {
{% if database_type == "postgresql" %}
  provider = "postgresql"
  url      = env("DATABASE_URL")
{% elif database_type == "mysql" %}
  provider = "mysql"
  url      = env("DATABASE_URL")
{% else %}
  provider = "sqlite"
  url      = "file:./dev.db"
{% endif %}
}

model Item {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("items")
}
