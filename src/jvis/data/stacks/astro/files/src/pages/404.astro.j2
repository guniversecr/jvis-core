---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 — {{ project_name }}">
  <main>
    <h2>404 — Page Not Found</h2>
    <p>The page you are looking for does not exist.</p>
    <a href="/">Go Home</a>
  </main>
</Layout>

<style>
  main {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1rem;
    text-align: center;
  }

  a {
    color: #8b5cf6;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }
</style>
