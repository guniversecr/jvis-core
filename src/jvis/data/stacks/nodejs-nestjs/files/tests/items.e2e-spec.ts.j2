import { Test, TestingModule } from '@nestjs/testing';
import { INestApplication, ValidationPipe } from '@nestjs/common';
import * as request from 'supertest';
import { AppModule } from '../src/app.module';

describe('Items (e2e)', () => {
  let app: INestApplication;
  let createdId: string;

  beforeAll(async () => {
    const moduleFixture: TestingModule = await Test.createTestingModule({
      imports: [AppModule],
    }).compile();

    app = moduleFixture.createNestApplication();
    app.useGlobalPipes(new ValidationPipe({ whitelist: true, transform: true }));
    await app.init();
  });

  afterAll(async () => {
    await app.close();
  });

  describe('POST /api/items', () => {
    it('should create an item', () => {
      return request(app.getHttpServer())
        .post('/api/items')
        .send({ name: 'Test Item', description: 'A test item' })
        .expect(201)
        .then((res) => {
          expect(res.body).toHaveProperty('id');
          expect(res.body.name).toBe('Test Item');
          createdId = res.body.id;
        });
    });

    it('should return 400 for invalid data', () => {
      return request(app.getHttpServer())
        .post('/api/items')
        .send({ name: '' })
        .expect(400);
    });
  });

  describe('GET /api/items', () => {
    it('should list all items', () => {
      return request(app.getHttpServer())
        .get('/api/items')
        .expect(200)
        .then((res) => {
          expect(Array.isArray(res.body)).toBe(true);
        });
    });
  });

  describe('GET /api/items/:id', () => {
    it('should return an item by id', () => {
      return request(app.getHttpServer())
        .get(`/api/items/${createdId}`)
        .expect(200)
        .then((res) => {
          expect(res.body.name).toBe('Test Item');
        });
    });

    it('should return 404 for non-existent item', () => {
      return request(app.getHttpServer())
        .get('/api/items/non-existent-id')
        .expect(404);
    });
  });

  describe('PATCH /api/items/:id', () => {
    it('should update an item', () => {
      return request(app.getHttpServer())
        .patch(`/api/items/${createdId}`)
        .send({ name: 'Updated Item' })
        .expect(200)
        .then((res) => {
          expect(res.body.name).toBe('Updated Item');
        });
    });
  });

  describe('DELETE /api/items/:id', () => {
    it('should delete an item', () => {
      return request(app.getHttpServer())
        .delete(`/api/items/${createdId}`)
        .expect(204);
    });
  });
});
